<?xml version="1.0"?>
<!-- $Id$ -->
<overlay>
	<template id="asecurite.agent.planning.rows" template="" lang="" group="0" version="">
		<grid width="100%" class="content">
			<columns>
				<column width="15"/>
				<column/>
				<column/>
				<column/>
				<column/>
				<column/>
				<column/>
				<column/>
			</columns>
			<rows>
				<row class="th">
					<html label="Jour" id="date"/>
					<nextmatch-sortheader label="Heure d'arrivée" id="heure_arrivee"/>
					<nextmatch-sortheader label="Nombre d'heures de pause" id="pause"/>
					<nextmatch-sortheader label="Heure de départ" id="heure_depart"/>
					<nextmatch-sortheader label="Jour (nombre d'heures)" id="heures_jour"/>
					<nextmatch-sortheader label="Nuit (nombre d'heures)" id="heures_nuit"/>
					<nextmatch-sortheader label="Site" id="idasecurite_site"/>
					<description value="Opérations"/>
				</row>
				<row class="row">
					<description id="${row}[date]"/>
					<description id="${row}[heure_arrivee]"/>
					<description id="${row}[pause]"/>
					<description id="${row}[heure_depart]"/>
					<description id="${row}[heures_jour]"/>
					<description id="${row}[heure_nuit]"/>
					<description id="${row}[idasecurite_site]"/>
					<hbox align="center">
						<button image="delete" id="delete[$row_cont[idasecurite_horaires_agent]]"/>
						<checkbox options="$cont[idasecurite_horaires_agent]" id="checkbox[]"/>
					</hbox>
				</row>
			</rows>
		</grid>
	</template>
	<template id="asecurite.agent.planning" template="" lang="" group="0" version="">
		<grid width="100%">
			<columns>
				<column/>
			</columns>
			<rows>
				<row>
					<description/>
				</row>
				<row>
					<html id="msg"/>
				</row>
				<row>
					<nextmatch id="nm" options="asecurite.agent.planning.rows"/>
				</row>
				<row>
					<grid width="100%">
						<columns>
							<column/>
							<column/>
						</columns>
						<rows>
							<row>
								<description/>
								<hbox align="right">
									<button id="delete_selected" image="delete"/>
									<button onclick="push_toggle_all(form::name('nm[rows][checkbox][]'),true); return false;" image="arrow_ltr"/>
								</hbox>
							</row>
						</rows>
					</grid>
				</row>
				<row>
					<grid width="100%">
						<columns>
							<column/>
						</columns>
						<rows>
							<row>
								<grid width="100%">
									<columns>
										<column/>
									</columns>
									<rows>
										<row>
											<description/>
										</row>
										<row>
											<description/>
										</row>
									</rows>
								</grid>
							</row>
							<row>
								<grid width="100%" class="add_horaire">
									<columns>
										<column/>
										<column/>
										<column/>
										<column/>
									</columns>
									<rows>
										<row>
											<html label="Ajouter un nouveau jour travaillé"/>
											<description/>
											<description/>
											<description/>
										</row>
										<row>
											<html id="msg_horaire"/>
											<description/>
											<description/>
											<description/>
										</row>
										<row class="th">
											<description value="Date"/>
											<description value="Heure d'arrivée"/>
											<description value="Heure de départ"/>
											<description value="Pause"/>
										</row>
										<row class="row">
											<date id="date"/>
											<date-timeonly id="heure_arrivee"/>
											<date-timeonly id="heure_depart"/>
											<hbox>
												<textbox size="3" id="pause"/>
												<description value="Heure(s)"/>
											</hbox>
										</row>
										<row>
											<button label="Valider" id="add_horaire"/>
											<description/>
											<description/>
											<description/>
										</row>
									</rows>
								</grid>
							</row>
						</rows>
					</grid>
				</row>
			</rows>
		</grid>
	</template>
</overlay>